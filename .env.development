# Development environment settings
NODE_ENV=development

# Enable turbo mode
NEXT_TURBO=true

# Disable optimizeCss to avoid critters issues
NEXT_DISABLE_OPTIMIZED_CSS=true

# Enable Fast Refresh
NEXT_FAST_REFRESH=true

# Reduce TypeScript checking during development
NEXT_TYPESCRIPT_CHECK_FAST=true

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# Only compile needed files
NEXT_MINIMAL_COMPILATION=true

# Enable SWC minification for faster builds
NEXT_RUNTIME_OPTIMIZE=true

# Set this to true to analyze bundle with @next/bundle-analyzer
# ANALYZE=true

# Reduce TypeScript checking during development
TS_NODE_TRANSPILE_ONLY=true
FAST_REFRESH_LOADER=true 